{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["renderer/*"]
    }
  },
  "include": [
    "renderer/next-env.d.ts",
    "renderer/**/*.ts",
    "renderer/**/*.tsx",
    "renderer/.next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "electron", "app"]
}