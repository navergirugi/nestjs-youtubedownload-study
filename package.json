{
  "name": "youtube-downloader-app",
  "version": "0.1.0",
  "private": true,
  "main": "app/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"yarn:dev:next\" \"yarn:dev:electron\" --kill-others",
    "dev:next": "next dev renderer",
    "dev:electron": "wait-on http://localhost:3000 && yarn build:electron && electron .",
    "build": "yarn build:electron && yarn build:next",
    "build:next": "next build renderer",
    "build:electron": "tsc -p electron",
    "dist": "yarn build && next export renderer -o dist/renderer && electron-builder",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write ."
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-store": "^10.1.0",
    "next": "13.4.19",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "yt-dlp-wrap": "^2.3.12"
  },
  "devDependencies": {
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.15",
    "concurrently": "^8.2.1",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "8.48.0",
    "eslint-config-next": "13.4.19",
    "postcss": "8.4.29",
    "prettier": "^3.0.3",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.ssyoutube.clone",
    "productName": "SSYouTube Downloader",
    "files": [
      "app/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
