{
  "compilerOptions": {
    "outDir": "../app",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES2020",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": ["./**/*.ts"]
}